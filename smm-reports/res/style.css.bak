/* CSS Document */
.container{
	width: 98%;
	margin: auto;

}
.inner-container{
	position: relative;
	padding-top: 10px;
	padding-bottom: 10px;
	background:#FAFAFA;
	border-radius: 5px;
	
}

.container-table{
    width: 100%;
    margin: auto;
    position: relative;
}
.search-form{
	padding-left: 20px;
	display:none;
}

.dateRange{
	/*display: inline-block;*/
	padding-left:35%;
}

table{
	width: 98%;

}

#main{
    display: none;
}

table tbody tr td {
    border-bottom: none !important;
}

#loading{
    position: absolute;
    top: 50%;
    left: 50%;
    font-size: 50px;
    font-weight: bold;
}

footer {
    margin-left: auto;
    margin-right: auto;
    padding-bottom: 2px;
    position:relative;
    bottom: 0px;
    left: 0px;
    margin-bottom: 0px;
    right: 0px;
    position: fixed;
    background-color: #FAFAFA;
}

.bgload {
    background-color: #333;
    width: 100%;
    height: 100% !important;
    position: fixed;
    top: 0px;
    right: 0px;
    z-index: 3 !important;
    opacity: 0.5;
    -moz-border-radius: 10px;
    -webkit-border-radius: 10px;
    -khtml-border-radius: 10px;
    -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=50)";/* IE 8 */
    filter: alpha(opacity=50);  /* IE 5-7 */
    -moz-opacity: 0.5;          /* Netscape */
    -khtml-opacity: 0.5;        /* Safari 1.x */
    display: none;
}

.navbar-container{
    z-index: 2 !important;
}

.noResult{
    font-size: 20px;
    color: #B9B9B9;
    font-weight: bold;
}

tr:hover td {
    background: #CEE3F6 !important;
}
#table-head th{
    color: white !important;
}

#table-head, tr#summary-head{
    background: #34495E;
    font-size: 12px !important;
    pointer-events: none !important;
}


.container {
    padding: 15px 10px 0px !important;
}

.fixed{
    top:-10px;
    position:fixed;
    width:auto;
    display:none;
    border:none;
}
.fixed-headers .fixed{
    display: none ;
}
.total{
    position: fixed ;
}

.tl{
    font: bold;
    color: darkred;
    text-align:center;
}

.columns{
    display: inline-block;
    vertical-align: top;
    margin-right: 10px;
    padding: 3px;
}

#companies_scheme{
    margin: 0px 7px 7px 7px;
    max-height: 500px;
    white-space: nowrap;
    overflow-x: auto;
    border: solid 1px #F5F1F1;
    background-color: #FDFDFD;
}

#go{
    display: none;
}

.project_name{
    font-style: italic;
}

.company_scheme_title{
    margin: 9px 7px 0px 6px;
    background-color: #F9F9F9;
    border: solid 1px #EFEFEF;
    padding: 5px;
    font-size: 16px;
    font-weight: bold;
    display: none;
}
#companies{
    display: none;
    min-height: 570px;
}
#all, #btn_scheme_inactive{
    background-color: #DE88BC;
    color: #fff;
    padding: 3px;
    border-radius: 5px;
    font-size: 11px;
    margin: 0px 0px 0px 8px;
    cursor: pointer;
}

#find{
    float: right;
    margin: 10px;
    background-color: #1f8dd6;
    color: #fff;
    padding: 5px 30px;
    text-transform: uppercase;
    border: #1f8dd6;
}
div#summary{
	width:100%;
	margin-bottom:20px;	
	margin-top:30px;	
}
#summary table{
	margin: 10px 0px;
	width:98%;
}

tr#summary-head th{
	color: #fff;
	font-weight: bold;	
}

.td3{
	text-align:center;
}
.lft{
	text-align:left !important;	
}

.scheme_inactive{
	color: #B1B1B1;	
}

